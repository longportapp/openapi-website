{
  "openapi": "3.0.0",
  "info": {
    "description": "该接口用于获取股票初始保证金比例、维持保证金比例、强平保证金比例",
    "version": "v1",
    "title": "获取保证金比例"
  },
  "paths": {
    "/v1/risk/margin-ratio": {
      "get": {
        "summary": "获取保证金比例",
        "description": "该接口用于获取股票初始保证金比例、维持保证金比例、强平保证金比例",
        "parameters": [
          {
            "in": "query",
            "name": "symbol",
            "description": "股票代码，使用 `ticker.region` 格式，例如：`AAPL.US`",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "返回成功",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/margin_ratio_rsp"
                }
              }
            }
          },
          "400": {
            "description": "内部错误"
          }
        },
        "request_body": {
          "type": "python",
          "value": "from datetime import datetime\nfrom longport.openapi import TradeContext, Config\n\nconfig = Config.from_env()\nctx = TradeContext(config)\nresp = ctx.margin_ratio(\"700.HK\")\nprint(resp)\n"
        },
        "response_body": {
          "code": 0,
          "data": {
            "im_factor": "0.1",
            "mm_factor": "0.1",
            "fm_factor": "0.1"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "margin_ratio_rsp": {
        "required": ["im_factor", "mm_factor", "fm_factor"],
        "properties": {
          "im_factor": {
            "type": "string",
            "description": "初始保证金比例"
          },
          "mm_factor": {
            "type": "string",
            "description": "维持保证金比例"
          },
          "fm_factor": {
            "type": "string",
            "description": "强平保证金比例"
          }
        }
      }
    }
  }
}
