{
  "openapi": "3.0.0",
  "info": {
    "description": "该接口用于获取包括账户、基金代码、持有份额、成本净值、当前净值、币种在内的基金持仓信息",
    "version": "v1",
    "title": "获取基金持仓"
  },
  "paths": {
    "/v1/asset/fund": {
      "summary": "获取基金持仓",
      "get": {
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "description": "基金代码，使用 `ISIN` 格式，例如：`HK0000676327` <a href=\"https://en.wikipedia.org/wiki/International_Securities_Identification_Number\">ISIN 解释</a>",
            "required": false,
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "返回成功",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/fund_rsp"
                }
              }
            }
          },
          "400": {
            "description": "内部错误"
          }
        },
        "request_body": {
          "type": "python",
          "value": "# 获取基金持仓\n# https://open.longportapp.com/docs/trade/asset/fund\nfrom longport.openapi import TradeContext, Config\n\nconfig = Config.from_env()\nctx = TradeContext(config)\nresp = ctx.fund_positions()\nprint(resp)\n"
        },
        "response_body": {
          "code": 0,
          "data": {
            "list": [
              {
                "account_channel": "lb",
                "fund_info": [
                  {
                    "symbol": "HK0000447943",
                    "symbol_name": "高腾亚洲收益基金",
                    "currency": "USD",
                    "holding_units": "5.000",
                    "current_net_asset_value": "0",
                    "cost_net_asset_value": "0.00",
                    "net_asset_value_day": "1649865600"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "fund_rsp": {
        "properties": {
          "list": {
            "type": "array",
            "description": "股票持仓信息",
            "required": ["account_channel"],
            "properties": {
              "account_channel": {
                "type": "string",
                "description": "账户类型"
              },
              "fund_info": {
                "type": "array",
                "description": "基金详情",
                "required": [
                  "symbol",
                  "current_net_asset_value",
                  "net_asset_value_day",
                  "symbol_name",
                  "currency",
                  "cost_net_asset_value"
                ],
                "properties": {
                  "symbol": {
                    "type": "string",
                    "description": "基金 ISIN 代码"
                  },
                  "current_net_asset_value": {
                    "type": "string",
                    "description": "当前净值"
                  },
                  "net_asset_value_day": {
                    "type": "string",
                    "description": "当前净值时间"
                  },
                  "symbol_name": {
                    "type": "string",
                    "description": "基金名称"
                  },
                  "currency": {
                    "type": "string",
                    "description": "币种"
                  },
                  "cost_net_asset_value": {
                    "type": "string",
                    "description": "成本净值"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
