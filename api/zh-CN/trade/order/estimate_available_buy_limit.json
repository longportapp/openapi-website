{
  "openapi": "3.0.0",
  "info": {
    "description": "交易接口总览",
    "version": "v1",
    "title": "交易接口总览"
  },
  "paths": {
    "/v1/trade/estimate/buy_limit": {
      "get": {
        "description": "该接口用于港美股，窝轮，期权的预估最大购买数量",
        "summary": "预估最大购买数量",
        "access": "交易权限",
        "parameters": [
          {
            "name": "symbol",
            "in": "query",
            "description": "股票代码，使用 `ticker.region` 格式，例如：`AAPL.US`",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "order_type",
            "in": "query",
            "description": "[订单类型](../trade-definition#ordertype)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "price",
            "in": "query",
            "required": false,
            "description": "预估下单价格，例如：`388.5`",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "side",
            "in": "query",
            "description": "买卖方向<br/><br/> **可选值:**<br/> `Buy` - 买入<br/> `Sell` - 卖出 卖出只支持美股卖空查询",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "currency",
            "in": "query",
            "description": "结算货币",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "order_id",
            "in": "query",
            "description": "订单 ID，获取改单预估最大购买数量时必填",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "获取预估最大购买数量",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/estimate_available_buy_limit_rsp"
                }
              }
            }
          },
          "400": {
            "description": "查询失败，请求参数错误。"
          }
        },
        "request_body": {
          "type": "python",
          "value": "from longport.openapi import TradeContext, Config, OrderStatus, OrderType, OrderSide\n\nconfig = Config.from_env()\nctx = TradeContext(config)\n\nresp = ctx.estimate_max_purchase_quantity(\n    symbol = \"700.HK\",\n    order_type = OrderType.LO,\n    side = OrderSide.Buy,\n)\nprint(resp)\n"
        },
        "response_body": {
          "code": 0,
          "message": "success",
          "data": {
            "cash_max_qty": "100",
            "margin_max_qty": "100"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "estimate_available_buy_limit_rsp": {
        "type": "object",
        "description": "预估最大购买数量",
        "required": ["cash_max_qty", "margin_max_qty"],
        "properties": {
          "cash_max_qty": {
            "type": "string",
            "description": "现金可买数量，默认为空字符串"
          },
          "margin_max_qty": {
            "type": "string",
            "description": "融资可买数量，默认为空字符串"
          }
        }
      }
    }
  }
}
